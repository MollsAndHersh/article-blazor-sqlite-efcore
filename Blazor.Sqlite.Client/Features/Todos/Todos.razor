@page "/todos"

@if (_isLoading)
{
    <MudSkeleton></MudSkeleton>
}
else
{
    <div class="mb-8">
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="AddTaskAsync">Add Todo</MudButton>
    </div>

    <div class="d-flex flex-wrap" style="gap: 1rem;">
        @foreach (var todo in _todos)
        {
            <MudCard>
                <MudCardHeader>
                    <MudText Typo="Typo.h5">@todo.Title</MudText>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body1">@todo.Description</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="() => DeleteTaskAsync(todo.Id)"></MudIconButton>
                </MudCardActions>
            </MudCard>
        }
    </div>
}