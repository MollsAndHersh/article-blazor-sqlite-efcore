@inherits LayoutComponentBase

<MudThemeProvider Theme="@DefaultTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="ToggleMenu"></MudIconButton>
        <MudSpacer />
        <MudHidden Breakpoint="Breakpoint.Md" Invert="true">
            <MudText Typo="Typo.h5"> EF Core with Sqlite in Blazor WASM</MudText>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.Md">
            <MudText Typo="Typo.h6" Class="truncate"> EF Core with Sqlite in Blazor WASM</MudText>
        </MudHidden>
        <MudSpacer />
    </MudAppBar>
    <MudDrawer @bind-Open="_open" Breakpoint="Breakpoint.Md" Elevation="2" Variant="DrawerVariant.Mini" ClipMode="DrawerClipMode.Docked">
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard" Href="/">Dashboard</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ViewList" Href="/contributions">Contributions</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


